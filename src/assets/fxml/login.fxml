<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="140.0" prefWidth="480.0" styleClass="panel" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.silverfern.desktop.controllers.Login">
    <Label id="message" layoutX="19.0" layoutY="12.0" text="Error">
        <styleClass>
            <String fx:value="hidden"/>
            <String fx:value="text-error"/>
        </styleClass>
    </Label>
    <TextField fx:id="email" layoutX="40.0" layoutY="40.0" onAction="#login" promptText="Minecraft email"/>
    <PasswordField fx:id="password" layoutX="40.0" layoutY="74.0" onAction="#login" promptText="Password"/>
    <Button layoutX="201.0" layoutY="74.0" mnemonicParsing="false" onAction="#login" text="Login"/>
</AnchorPane>
